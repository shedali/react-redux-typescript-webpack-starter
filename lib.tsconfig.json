{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types", "./types"
    ]
  },
  "files": [
    "index.ts",
    "types/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts?",
    "dist"
  ]
}
